@using Entitylayer.Concrate;
@model Entitylayer.Concrate.Kullanicilar

@{
	ViewData["Title"] = "Index";
	//Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}


<head>
	<meta charset="UTF-8">
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/css/admin.css" rel="stylesheet" />


</head>


<body>

	


	@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
	{
		<div class="alert alert-danger">
			@ViewBag.ErrorMessage
		</div>
	}


	
	<form action="/UserLogin/Index/" method="post">
		<div class="login-wrap">
			<div class="login-html">
				<input id="tab-1" type="radio" name="tab" class="sign-in" value="Giriş Yap" checked>
				<label for="tab-1" class="tab">Giriş Yap</label>

				<input id="tab-2" type="radio" name="tab" class="sign-up" value="Kaydol">
				<label for="tab-2" class="tab">Kaydol</label>


				<div class="login-form">
					<div class="sign-in-htm">
						<div class="group">
							<label for="user" class="label">Mail</label>
							<input id="user" type="email" class="input" name="mail2" placeholder="example@gmail.com">
						</div>
						<div class="group">
							<label for="pass" class="label">Password</label>
							<input id="pass" type="password" class="input" name="password2" data-type="password">
						</div>

						<div class="group">
							<input type="submit" class="button" value="Sign In">
						</div>
						<div class="hr"></div>
						<div class="foot-lnk">
							<a href="#forgot">Forgot Password?</a>
						</div>
					</div>
					<div class="sign-up-htm">
						<div class="group">
							<label for="user" class="label">Mail</label>

							<input id="user" type="email" class="input" name="KullaniciMail" placeholder="example@gmail.com">
						</div>
						<div class="group">
							<label for="pass" class="label">Password</label>
							<input id="pass" type="password" class="input" name="KullaniciPassword" data-type="password">
						</div>
						<div class="group">
							<label for="ad" class="label">Kullanıcı Adı</label>
							<input id="ad" type="text" class="input" name="KullaniciPhoto" data-type="UserName">
						</div>




						<div class="group">
							<input type="submit" class="button" value="Sign Up">
						</div>
						<div class="hr"></div>

					</div>
				</div>
			</div>
		</div>
	</form>


