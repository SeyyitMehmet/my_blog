@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Entitylayer.Concrate.Blog>

@{
	ViewData["Title"] = "Home Page";
}
<div class="row card-group g-0 bg-light ">
	@for (var i = 0; i < Model.Count; i++)
	{
		var item = Model[i];
		<div class="col-12  col-md-4">
			<div class="card rounded-3 pt-1 pe-2 pb-0 me-1 ps-3" style="height:30rem">
				<a href="/card/bootstrapcard/@item.BlogID">
					<img src="@item.BlogImage" class="card-img border-bottom border-3" style="height:60% ; width: stretch" />
					<div class="card-body text-light">
						<h5 class="card-title">@item.BlogTitle</h5>
						<p class="card-text">
							@{
								int maxLength = 70; // Örnek bir maksimum uzunluk değeri
								string content = item.BlogContent;
								if (content.Length > maxLength)
								{
									content = content.Substring(0, maxLength);
									int lastSpaceIndex = content.LastIndexOf(" ");
									if (lastSpaceIndex != -1)
									{
										content = content.Substring(0, lastSpaceIndex);
									}
									content += "...";
								}
							}
							@Html.Raw(content)
						</p>

					</div>
				</a>
				<div class="card-footer">
					<small class="text-body-secondary">Last update @DateTime.Now</small>
				</div>
			</div>
		</div>

		@if ((i + 1) % 3 == 0 && (i + 1) % 6 != 0 @*|| i == Model.Count - 1*@)
		{
			<div class="container-fluid bg-light " style="height:5px "></div>
		}
	}
	
</div>



