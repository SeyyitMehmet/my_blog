            <div class=" d-flex justify-content-center ">
                <img src="@item.BlogImage" style="height:contain;width:40%" class=" p-2" />
            </div>
            <div class="">
                <div class="card-body">
                    <h5 class="card-title d-flex justify-content-center text-decoration-underline">@item.BlogTitle</h5>
