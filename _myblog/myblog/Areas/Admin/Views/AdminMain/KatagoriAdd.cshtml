@model Entitylayer.Concrate.Menu
@{
	ViewData["Title"] = "KatagoriAdd";
	Layout = "~/Areas/Admin/Views/Shared/AdminView.cshtml";
}
@section styles
	{
	<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
}


<h1>KatagoriAdd</h1>

@using (Html.BeginForm("yanMenuDesign", "AdminMain", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
	@Html.Label("katagori başlığı")
	@Html.TextBoxFor(x=>x.MenuTitle,new{@class="form-control"})
	@*@Html.ValidationMessageFor(x=>x.BlogTitle)*@
	<br />

	@Html.Label("katagorinin türü")
	@Html.TextBoxFor(x=>x.MenuKatagori,new{@class="form-control"})

	@* @Html.Label("katagorinin icerigi")
    @Html.TextBoxFor(x=>x.Content,new{@class="form-control"})*@

	@*@Html.Label("menu ID")
	@Html.TextBoxFor(x=>x.MenuID,new{@class="form-control"})*@

	<div id="editor">
		
	</div>

	<button class="btn btn-primary">Kaydet</button>
}
@section scripts
	{
	<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
	<script>

		var toolbarOptions = [
			['bold', 'italic', 'underline', 'strike'],        // toggled buttons
			['blockquote', 'code-block'],

			[{ 'header': 1 }, { 'header': 2 }],               // custom button values
			[{ 'list': 'ordered' }, { 'list': 'bullet' }],
			[{ 'script': 'sub' }, { 'script': 'super' }],      // superscript/subscript
			[{ 'indent': '-1' }, { 'indent': '+1' }],          // outdent/indent
			[{ 'direction': 'rtl' }],                         // text direction

			[{ 'size': ['small', false, 'large', 'huge'] }],  // custom dropdown
			[{ 'header': [1, 2, 3, 4, 5, 6, false] }],
			['link', 'image', 'video', 'formula'],          // add's image support
			[{ 'color': [] }, { 'background': [] }],          // dropdown with defaults from theme
			[{ 'font': [] }],
			[{ 'align': [] }],

			['clean']                                         // remove formatting button
		];

		var quill = new Quill('#editor', {
			modules: {
				toolbar: toolbarOptions
			},
			theme: 'snow'
		});


		document.getElementById("form")
			.addEventListener("submit", (event) => {

				const quilinput = document.getElementById("quildata")
				quilinput.value = quill.root.innerHTML.trim()
				debugger
				return true
			})
	</script>
}
