@using Entitylayer.Concrate
@model List<Blog>
@{
    ViewData["Title"] = "CardDesing";
    Layout = "~/Areas/Admin/Views/Shared/AdminView.cshtml";
}

<h1>CardDesing</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Durum</th>
            <th scope="col">İçerik</th>
            <th scope="col">Sil</th>
            <th scope="col">Düzenle</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody style="overflow-x: hidden;">
            <tr>
                <th scope="row">@item.BlogID</th>
                <td>@item.BlogTitle</td>
                @if (item.Blogstatus)
                {
                    <td class="text-success">Aktif</td>
                }
                else
                {
                    <td class="text-danger">Pasif</td>
                }

                <td><p style="height:40px;width:75vh" class="overflow-hidden text-break">@Html.Raw(item.BlogContent)</p></td>
                <td><a href="/Admin/AdminMain/BlogDelete/@item.BlogID" class="btn btn-danger">Sİl</a></td>
                <td><a href="/Admin/AdminMain/BlogContentDesing/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
            </tr>
        </tbody>
    }
   
</table>
<a href="/Admin/AdminMain/BlogAdd" class="btn btn-primary">Yeni Blog Yaz</a>