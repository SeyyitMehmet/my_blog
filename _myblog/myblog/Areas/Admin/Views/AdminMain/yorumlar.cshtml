@using Entitylayer.Concrate
@model List<BlogEk>
@{
    ViewData["Title"] = "kullanıcılar";
    Layout = "~/Areas/Admin/Views/Shared/AdminView.cshtml";
}

<h1>yorumlarDesign</h1>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">içerik</th>
            <th scope="col">BlogID</th>
            <th scope="col">YazarResmi</th>
            <th scope="col">Sil</th>
            <th scope="col">Düzenle</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody style="overflow-x: hidden;">
            <tr>
                <th scope="row">@item.BlogEkID</th>
                <td>@item.BlogEkTitle</td>
                <td>@item.BlogEkContent</td>
                <td>@item.BlogID</td>
                <td>@item.BlogEkResim</td>



                <td><a href="/Admin/AdminMain/yorumDelete/@item.BlogEkID" class="btn btn-danger">Sİl</a></td>
                <td><a href="/Admin/AdminMain/yorumContentDesing/@item.BlogEkID" class="btn btn-warning">Düzenle</a></td>
            </tr>
        </tbody>
    }

</table>