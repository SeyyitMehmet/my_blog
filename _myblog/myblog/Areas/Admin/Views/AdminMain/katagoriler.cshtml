@using Entitylayer.Concrate
@model List<Menu>
@{
    ViewData["Title"] = "kullanıcılar";
    Layout = "~/Areas/Admin/Views/Shared/AdminView.cshtml";
}

<h1>MenuDesign</h1>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Durum</th>
            <th scope="col">icerik</th>
            <th scope="col">Sil</th>
            <th scope="col">Düzenle</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody style="overflow-x: hidden;">
            <tr>
                <th scope="row">@item.MenuID</th>
                <td>@item.MenuTitle</td>
                @if (item.MenuKatagori=="EDB")
                {
                    <td class="text-success">EDEBİYAT</td>
                }
                else
                {
                    <td class="text-success">YAZILIM</td>
                }
                <td>@Html.Raw(item.Content)</td>

                <td><a href="/Admin/AdminMain/MenuDelete/@item.MenuID" class="btn btn-danger">Sİl</a></td>
                <td><a href="/Admin/AdminMain/yanMenuDesign/@item.MenuID" class="btn btn-warning">Düzenle</a></td>
            </tr>
        </tbody>
    }

</table>
<a href="/Admin/AdminMain/KatagoriAdd" class="btn btn-primary">Yeni katagori ekle</a>